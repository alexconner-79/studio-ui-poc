        },
        "type": {
          "type": "string",
          "not": {
            "enum": [
              "Stack",
              "Grid",
              "Section",
              "ScrollArea",
              "Spacer",
              "Heading",
              "Text",
              "Image",
              "Input",
              "Link",
              "Divider",
