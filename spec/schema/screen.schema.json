            "orientation": {
              "type": "string",
              "enum": [
                "horizontal",
                "vertical"
              ]
            },
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/node"
          }
